<body>

  <header>
    <%- include('../partials/_header'); %>
  </header>

  <main class="text-center" style="padding-top: 4em;">

    <h3 style="margin-top: 30px; margin-bottom: 15px">Join the Tiny Club</h3>

    <form method="POST" action="/register">
      <input type="email" name="email" placeholder="email" required style="padding: 10px" />
      <br>
      <input type="password" name="password" placeholder="password" style="margin-top: 15px; padding: 10px"/>
      <br>
      <button class="btn btn-info" type="submit" style="margin-top: 15px; padding-left: 29px; padding-right: 29px;">Register</button>
    </form>

  </main>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
